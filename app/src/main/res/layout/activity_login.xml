<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/normal_gradient"
    tools:context=".login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:id="@+id/mainlogin"
        android:weightSum="10">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_help_outline_black_24dp"
                android:layout_alignParentEnd="true"
                android:onClick="needhelp"
                />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/musicstreaming"
        android:fontFamily="cursive"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:textColor="#212121"
        android:shadowColor="#fff"
        android:shadowRadius="20"
        android:textSize="35sp"

        />
        </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:gravity="center"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/buttonborder">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:weightSum="10">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:soundEffectsEnabled="true"
        android:layout_weight="5"
        android:text="Login"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:textColor="#3D5AFE"
        android:paddingStart="10dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="@string/signup"
            android:textAlignment="textEnd"
            android:padding="5dp"
            android:textSize="20sp"
            android:textColor="#3D5AFE"
            android:textStyle="bold"
            android:paddingEnd="10dp"
            android:onClick="singup"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_gravity="center">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" Username"
            android:shadowColor="#fff"
            android:shadowRadius="5"
            android:textColor="#3D5AFE"
            android:textColorHint="#2979FF"
            android:singleLine="true"
            android:id="@+id/username_login"
            android:textStyle="bold"
            android:drawableStart="@drawable/person_profile"
            android:drawableTint="#2979FF"
            android:maxLength="16"
            android:inputType="text"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal">
        <EditText
            android:layout_width="0dp"
            android:layout_weight="9"
            android:layout_height="wrap_content"
            android:hint=" Password"
            android:textColor="#3D5AFE"
            android:textColorHint="#2979FF"
            android:shadowRadius="5"
            android:inputType="textPassword"
            android:textStyle="bold"
            android:singleLine="true"
            android:maxLength="10"
            android:id="@+id/password_login"
            android:shadowColor="#fff"
            android:drawableStart="@drawable/password_image"
            android:drawableTint="#2979FF"
            />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:src="@drawable/visible"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/changevis"
                android:focusableInTouchMode="true"
                android:onClick="changevisibility"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:textSize="20sp"
            android:gravity="center"
            android:backgroundTint="#3D5AFE"
            android:textColor="#fff"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:shadowColor="#fff"
            android:shadowRadius="10"
            android:background="@drawable/buttonborder"
            android:onClick="loginaction"/>

    </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:text="Forgot Password?"
            android:textColor="#651FFF"
            android:onClick="forgotpass"
            android:textAlignment="textEnd"/>
    </LinearLayout>
    </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/forgotpassword">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/back"
            android:id="@+id/back"
            android:layout_marginTop="10dp"
            android:onClick="getback"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.MaterialComponents.Headline4"
            android:padding="5dp"
            android:id="@+id/forgot"
            android:singleLine="true"
            android:textColor="#2979FF"
            android:layout_toEndOf="@id/back"
            android:text="@string/forgotpass"
            android:textStyle="bold"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/forgot"
            android:id="@+id/enter_forgot_detail"
            android:padding="10dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Last Entered Username "
            android:id="@+id/forgot_username"
            android:layout_marginTop="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:background="@drawable/buttonborder"
            android:layout_below="@id/forgot_username"
            android:gravity="center"
            android:onClick="newpass"
            android:layout_centerHorizontal="true"
            android:backgroundTint="#3D5AFE"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginTop="20dp"
            />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="An Email has been sent to your registered Email Address.\n Check for new password."
            android:id="@+id/positivemessage"
            android:gravity="center"
            android:visibility="gone"
            android:fadingEdge="horizontal"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:textColor="#3D5AFE"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/wanthelp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="65dp"
            android:src="@drawable/ic_help_outline_black_24dp"
            android:id="@+id/help"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.MaterialComponents.Headline3"
            android:text="Help"
            android:layout_marginStart="10dp"
            android:textColor="#3D5AFE"
            android:layout_toEndOf="@id/help"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/email_text"
            android:text="@string/contact"
            android:layout_below="@id/help"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:background="@drawable/buttonborder"
            android:layout_below="@id/email_text"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:backgroundTint="#3D5AFE"
            android:textColor="#fff"
            android:textStyle="bold"
            android:onClick="backtologin"
            />


    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/normal_gradient"
    tools:context=".login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:id="@+id/mainlogin"
        android:weightSum="10">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_help_outline_black_24dp"
                android:layout_alignParentEnd="true"
                android:onClick="needhelp"
                />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/musicstreaming"
        android:fontFamily="cursive"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:textColor="#212121"
        android:shadowColor="#fff"
        android:shadowRadius="20"
        android:textSize="35sp"

        />
        </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:elevation="10dp"
            app:cardBackgroundColor="#DDC3FFF7">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:weightSum="10">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:soundEffectsEnabled="true"
        android:layout_weight="5"
        android:text="Login"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:textColor="#3D5AFE"
        android:paddingStart="10dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="@string/signup"
            android:textAlignment="textEnd"
            android:padding="5dp"
            android:textSize="20sp"
            android:textColor="#3D5AFE"
            android:textStyle="bold"
            android:paddingEnd="10dp"
            android:onClick="singup"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_gravity="center">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="Username"
            android:id="@+id/username_textinputlayout"
            app:hintTextColor="#2979FF"
            android:textColorHint="#2979FF"
            app:hintAnimationEnabled="true"
            app:startIconDrawable="@drawable/person_profile"
            app:startIconTint="#2979FF"
            app:boxStrokeColor="#3D5AFE"
            app:boxCornerRadiusBottomStart="20dp"
            app:boxCornerRadiusTopEnd="20dp"
            app:errorEnabled="true"
            app:errorIconDrawable="@drawable/error_icon"
            app:endIconMode="clear_text"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/username_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:maxLength="10"
                android:textColor="#3D5AFE"
                android:inputType="text"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="Password"
            android:id="@+id/password_textinputlayout"
            app:hintTextColor="#2979FF"
            android:textColorHint="#2979FF"
            app:boxCornerRadiusBottomStart="20dp"
            app:boxCornerRadiusTopEnd="20dp"
            app:hintAnimationEnabled="true"
            app:startIconDrawable="@drawable/password_drawable"
            app:startIconTint="#2979FF"
            app:boxStrokeColor="#3D5AFE"
            app:endIconMode="password_toggle"
            app:endIconTint="#2979FF"
            app:errorEnabled="true"
            app:errorIconDrawable="@drawable/error_icon"
            android:layout_marginTop="10dp"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:minLines="6"
                android:textColor="#3D5AFE"
                android:inputType="textPassword"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:backgroundTint="#3D5AFE"
            android:textColor="#E0E0E3"
            android:textStyle="bold"
            android:background="@drawable/buttonborder"
            android:onClick="loginaction"/>

    </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:text="Forgot Password?"
            android:textColor="#651FFF"
            android:onClick="forgotpass"
            android:textAlignment="textEnd"/>
    </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/forgotpassword">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/back"
            android:id="@+id/back"
            android:layout_marginTop="10dp"
            android:onClick="getback"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.MaterialComponents.Headline4"
            android:padding="5dp"
            android:id="@+id/forgot"
            android:singleLine="true"
            android:textColor="#2979FF"
            android:layout_toEndOf="@id/back"
            android:text="@string/forgotpass"
            android:textStyle="bold"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/forgot"
            android:id="@+id/enter_forgot_detail"
            android:padding="10dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Last Entered Username "
            android:id="@+id/forgot_username"
            android:layout_marginTop="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:background="@drawable/buttonborder"
            android:layout_below="@id/forgot_username"
            android:gravity="center"
            android:onClick="newpass"
            android:layout_centerHorizontal="true"
            android:backgroundTint="#3D5AFE"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginTop="20dp"
            />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="An Email has been sent to your registered Email Address.\n Check for new password."
            android:id="@+id/positivemessage"
            android:gravity="center"
            android:visibility="gone"
            android:fadingEdge="horizontal"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:textColor="#3D5AFE"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/wanthelp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="65dp"
            android:src="@drawable/ic_help_outline_black_24dp"
            android:id="@+id/help"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.MaterialComponents.Headline3"
            android:text="Help"
            android:layout_marginStart="10dp"
            android:textColor="#3D5AFE"
            android:layout_toEndOf="@id/help"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/email_text"
            android:text="@string/contact"
            android:layout_below="@id/help"
            android:textSize="20sp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#3D5AFE"
            android:text="Back"
            android:onClick="backtologin"
            android:layout_below="@id/email_text"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"/>


    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:cardBackgroundColor="#E81D1D"
        app:cardCornerRadius="18dp"
        android:id="@+id/counter_container" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/tv_share_counter"
        app:layout_constraintTop_toTopOf="@id/counter_container"
        app:layout_constraintBottom_toBottomOf="@id/counter_container"
        app:layout_constraintLeft_toLeftOf="@id/counter_container"
        app:layout_constraintRight_toRightOf="@id/counter_container"
        android:text="10"
        android:gravity="center"
        android:elevation="5dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:maxLength="2"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
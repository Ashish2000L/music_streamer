<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
           <KeyAttribute
               motion:motionTarget="@+id/song_details_constainer"
               motion:framePosition="35"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/song_details_constainer"
               motion:framePosition="0"
               android:alpha="0" />
       </KeyFrameSet>
        <OnClick motion:targetId="@+id/drop_down" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/song_details_constainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@id/main_data_container"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="-10dp"
            android:elevation="-1dp" />
        <Constraint
            android:id="@+id/drop_down"
            motion:layout_constraintEnd_toEndOf="@id/main_data_container"
            android:layout_width="90dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="@id/main_data_container"
            android:rotation="-90"
            motion:layout_constraintTop_toTopOf="@id/main_data_container" />

    </ConstraintSet>
</MotionScene>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/night_drawable_background"
    android:orientation="vertical"
    tools:context=".register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical"
        android:id="@+id/register"
        android:visibility="visible"
        android:weightSum="10">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:padding="10dp"
        android:background="@drawable/buttonborder"
        android:weightSum="10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="SignUp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:textColor="#E0E0E3"
            android:layout_gravity="center_vertical"
            android:paddingStart="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="@string/login"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:padding="5dp"
            android:textSize="20sp"
            android:textColor="#E0E0E3"
            android:textStyle="bold"
            android:paddingEnd="10dp"
            android:onClick="login"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="3"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" Name"
            android:shadowColor="#fff"
            android:shadowRadius="2"
            android:textColor="#E0E0E3"
            android:textColorHint="#E0E0E3"
            android:inputType="textPersonName"
            android:id="@+id/et_name"
            android:drawableStart="@drawable/name_image_drawable"
            android:drawableTint="@color/text_colour"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" Email"
            android:drawableTint="@color/text_colour"
            android:shadowColor="#fff"
            android:shadowRadius="2"
            android:textColor="#E0E0E3"
            android:textColorHint="#E0E0E3"
            android:inputType="textEmailAddress"
            android:id="@+id/et_email"
            android:drawableStart="@drawable/email_drawable"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" Username"
            android:shadowColor="#fff"
            android:shadowRadius="2"
            android:textColor="#E0E0E3"
            android:textColorHint="#E0E0E3"
            android:inputType="text"
            android:singleLine="true"
            android:id="@+id/et_username"
            android:drawableStart="@drawable/person_profile"
            android:drawableTint="@color/text_colour"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal">
        <EditText
            android:layout_width="0dp"
            android:layout_weight="9"
            android:layout_height="wrap_content"
            android:hint=" Password"
            android:textColor="#E0E0E3"
            android:textColorHint="#E0E0E3"
            android:inputType="textPassword"
            android:maxLength="10"
            android:shadowRadius="2"
            android:shadowColor="#fff"
            android:textStyle="bold"
            android:id="@+id/et_password"
            android:drawableStart="@drawable/password_image"
            android:drawableTint="@color/text_colour"
            />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:src="@drawable/visible"
                android:layout_gravity="center"
                android:id="@+id/chngvis"
                android:onClick="changeviss"
                android:contentDescription="" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SignUp"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#E0E0E3"
            android:backgroundTint="@color/night_mode"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:shadowColor="#fff"
            android:shadowRadius="0.2"
            android:onClick="signupprocess"
            android:background="@drawable/buttonborder"/>

    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:id="@+id/linearotp"
        android:visibility="gone"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check your mail for OTP"
            android:textColor="#E0E0E3"
            style="@style/TextAppearance.AppCompat.Large"
            android:gravity="center"/>

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:maxLength="6"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="#E0E0E3"
            android:textColorHint="#E0E0E3"
            android:inputType="number"
            android:id="@+id/otp"
            android:hint="OTP" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:background="@drawable/buttonborder"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/night_mode"
            android:textColor="#E0E0E3"
            android:onClick="checkotp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back to Register?"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="#E0E0E3"
            android:onClick="backtoregister"
            />



    </LinearLayout>

</LinearLayout>
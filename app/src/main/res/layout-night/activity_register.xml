<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/night_drawable_background"
    android:orientation="vertical"
    tools:context=".register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical"
        android:id="@+id/register"
        android:visibility="visible"
        android:weightSum="10">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#434343"
            android:layout_gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:weightSum="10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="SignUp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:textColor="#E0E0E3"
            android:layout_gravity="center_vertical"
            android:paddingStart="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="@string/login"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:padding="5dp"
            android:textSize="20sp"
            android:textColor="#E0E0E3"
            android:textStyle="bold"
            android:paddingEnd="10dp"
            android:onClick="login"
            />
    </LinearLayout>
        </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="3"
        >

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="Name"
            android:id="@+id/name_textinputlayout"
            app:hintAnimationEnabled="true"
            app:startIconDrawable="@drawable/name_image_drawable"
            app:hintTextColor="#B5B5B5"
            android:textColorHint="#B5B5B5"
            app:startIconTint="#FFFFFF"
            app:boxStrokeColor="#FFFFFF"
            app:errorEnabled="true"
            app:errorIconDrawable="@drawable/error_icon"
            app:endIconMode="clear_text"
            app:errorTextColor="#fff"
            app:boxStrokeErrorColor="#fff"
            app:endIconTint="#fff"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:inputType="textPersonName"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="Email"
            android:id="@+id/email_textinputlayout"
            app:hintAnimationEnabled="true"
            app:startIconDrawable="@drawable/email_drawable"
            app:hintTextColor="#B5B5B5"
            android:textColorHint="#B5B5B5"
            app:startIconTint="#FFFFFF"
            app:boxStrokeColor="#FFFFFF"
            app:errorEnabled="true"
            app:errorIconDrawable="@drawable/error_icon"
            app:endIconMode="clear_text"
            app:errorTextColor="#fff"
            app:boxStrokeErrorColor="#fff"
            app:endIconTint="#fff"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:inputType="textEmailAddress"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="Username"
            android:id="@+id/user_textinputlayout"
            app:hintAnimationEnabled="true"
            app:startIconDrawable="@drawable/person_profile"
            app:hintTextColor="#B5B5B5"
            android:textColorHint="#B5B5B5"
            app:startIconTint="#FFFFFF"
            app:boxStrokeColor="#FFFFFF"
            app:errorEnabled="true"
            app:counterEnabled="true"
            app:counterMaxLength="10"
            app:errorIconDrawable="@drawable/error_icon"
            app:endIconMode="clear_text"
            app:errorTextColor="#fff"
            app:boxStrokeErrorColor="#fff"
            app:endIconTint="#fff"
            app:counterTextColor="@color/text_colour"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:maxLength="10"
                android:textColor="#FFFFFF"
                android:inputType="text"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="Password"
            android:id="@+id/pass_textinputlayout"
            app:hintAnimationEnabled="true"
            app:startIconDrawable="@drawable/password_drawable"
            app:hintTextColor="#B5B5B5"
            android:textColorHint="#B5B5B5"
            app:startIconTint="#FFFFFF"
            app:boxStrokeColor="#FFFFFF"
            app:errorEnabled="true"
            app:errorIconDrawable="@drawable/error_icon"
            app:endIconMode="password_toggle"
            app:endIconTint="#FFFFFF"
            app:errorTextColor="#fff"
            app:boxStrokeErrorColor="#fff"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:inputType="textPassword"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SignUp"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#E0E0E3"
            android:backgroundTint="#F5888888"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:shadowColor="#fff"
            android:shadowRadius="0.2"
            android:onClick="signupprocess"
            android:background="@drawable/buttonborder"/>

    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:id="@+id/linearotp"
        android:visibility="gone"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check your mail for OTP"
            android:textColor="#E0E0E3"
            style="@style/TextAppearance.AppCompat.Large"
            android:gravity="center"/>

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:maxLength="6"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="#E0E0E3"
            android:textColorHint="#E0E0E3"
            android:inputType="number"
            android:id="@+id/otp"
            android:hint="OTP" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:background="@drawable/buttonborder"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/night_mode"
            android:textColor="#E0E0E3"
            android:onClick="checkotp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back to Register?"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="#E0E0E3"
            android:onClick="backtoregister"
            />



    </LinearLayout>

</LinearLayout>
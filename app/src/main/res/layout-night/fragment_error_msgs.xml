<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".error_msgs">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/night_drawable_background"
        android:backgroundTint="#D0CFC8C8"
        android:backgroundTintMode="multiply"
        android:gravity="center">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/list_of_error"
            tools:listitem="@layout/custom_songs"
            android:background="@color/background_playlist"
            android:fadingEdge="vertical"
            android:requiresFadingEdge="vertical"
            android:fadingEdgeLength="80dp"
            />
        </LinearLayout>

</FrameLayout>